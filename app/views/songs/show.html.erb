<%= provide :title, @song.kh_title %>
<div class="row">
  <div class="col-md-9 album">
    <%= render "share/song_detail" %>
    <%= render "share/player" %>
    <%= render "share/fb_comment_box" %>
  </div>
  <div class="col-md-3">
    <%= render "share/fb_like_box" %>
    <%= render "share/right_ads2" %>
    <h4>
      <%= link_to @song.album do %>
        <%= t "labels.other_songs" %>
        <span class="glyphicon glyphicon-menu-right icon-more-2"></span>
      <% end %>
    </h4>
    <%= render partial: "other_song", collection: @similar_songs, as: :song %>
  </div>
</div>
