 <div class="song-search">
   <%= search_form_for Song.ransack(params[:q]), class: "navbar-form navbar-left form-search"  do |f| %>
    <div class="input-group">
      <%= f.text_field :keyword_cont, placeholder: t("labels.search_placeholder"),
        class: "form-control search-bar", size: "50", autocomplete: "off" %>
      <span class="input-group-btn">
        <%= button_tag type: "submit", class: "btn btn-default btn-search" do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </span>
    </div>
  <% end %>
  <div class="autocomplete-search-results"></div>
</div>
